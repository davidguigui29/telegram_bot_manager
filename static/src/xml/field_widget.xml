<template>
    <t t-name="BoolBadge" owl="1">
        <span class="badge rounded-circle p-2 border status-dot"
              t-att-class="value ? 'bg-success' : 'bg-danger'"
              t-on-click="() => this.updateValue(!value)"
              style="width: 15px; height: 15px; display: inline-block;">
            </span>
    </t>
</template>
